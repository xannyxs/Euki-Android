<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/blueberry</item>
        <item name="android:actionMenuTextColor">@color/blueberry</item>
        <item name="md_color_button_text">@color/blueberry</item>
    </style>


    <style name="MainTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash_layer_list</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- General -->

    <style name="PurpleButton" parent="TextStyle30">
        <item name="android:layout_width">@dimen/blue_button_width</item>
        <item name="android:layout_height">@dimen/dimen_x3_13</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_bordered_filled_purple</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="PurpleBorderedButton" parent="TextStyle30">
        <item name="android:layout_width">@dimen/blue_button_width</item>
        <item name="android:layout_height">@dimen/dimen_x3_13</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/iris</item>
        <item name="android:background">@drawable/selector_bordered_purple</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- Onboarding Styles -->

    <style name="WrapContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CodeDigitContainer">
        <item name="android:layout_width">@dimen/dimen_x10_5</item>
        <item name="android:layout_height">@dimen/dimen_x10_5</item>
    </style>

    <style name="CodeDigitText" parent="@style/TextStyle6">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CodeDigitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_x1_2</item>
        <item name="android:background">@color/blueberry</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="CodeButton" parent="TextStyle3">
        <item name="android:layout_width">@dimen/dimen_x10_6</item>
        <item name="android:layout_height">@dimen/dimen_x10_6</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/selector_circular_purple</item>
        <item name="android:textColor">@color/iris</item>
    </style>

    <!-- Daily Log Styles -->

    <style name="ExpandableContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dimen_x3_5</item>
        <item name="android:paddingRight">@dimen/dimen_x3_5</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="DailyItemNameContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_x17_5</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="DailyItemCircle">
        <item name="android:layout_width">@dimen/dimen_x4_5</item>
        <item name="android:layout_height">@dimen/dimen_x4_5</item>
        <item name="android:background">@drawable/bkg_circular_daily_log_off</item>
    </style>

    <style name="DailyItemText" parent="@style/LinkExpandableOnTap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dimen_x2_5</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DailyItemContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SelectableButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_x1_140</item>
        <item name="layout_columnWeight">1</item>
    </style>

    <style name="GridLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="useDefaultMargins">true</item>
        <item name="columnCount">3</item>
    </style>

    <style name="NavTextNormal">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NavTextSelected">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="SegmentedText">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Fields -->

    <style name="EditText" parent="@style/TextStyle16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_x11_5</item>
        <item name="android:paddingLeft">@dimen/dimen_x2_5</item>
    </style>

    <style name="ViewSeparator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/iris</item>
    </style>

</resources>
