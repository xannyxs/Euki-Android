<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_x8_10"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_x3_5"
        android:tint="@color/blueberry"
        android:src="@drawable/ic_reminders_add"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_x1_8"
        android:text="@string/option_new"
        style="@style/LinkExpandableOnTap"/>

</LinearLayout>
